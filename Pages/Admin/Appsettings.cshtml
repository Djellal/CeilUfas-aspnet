@page
@model CeilUfas.Pages.Admin.AppsettingsModel
@{
    ViewData["Title"] = "App Settings";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-gear-fill me-2"></i>Organization Settings</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AppSettings.Id" />
                        
                        <!-- Logo Section -->
                        <div class="row mb-4 align-items-center">
                            <div class="col-md-3">
                                <h5 class="text-primary mb-3">Organization Logo</h5>
                                @if (!string.IsNullOrEmpty(Model.AppSettings.LogoImagePath))
                                {
                                    <div class="text-center">
                                        <img src="@Model.AppSettings.LogoImagePath" class="img-thumbnail mb-2" style="max-height: 120px;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center text-muted">
                                        <i class="bi bi-image" style="font-size: 4rem;"></i>
                                        <p>No logo uploaded</p>
                                    </div>
                                }
                            </div>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <input type="file" class="form-control" asp-for="LogoFile" accept="image/*" id="logoInput" />
                                    <label class="input-group-text" for="logoInput"><i class="bi bi-upload"></i></label>
                                </div>
                                <div class="form-text">Recommended size: 300x100 pixels, max 2MB</div>
                                <input type="hidden" asp-for="AppSettings.LogoImagePath" />
                            </div>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <!-- Organization Information -->
                        <h5 class="text-primary mb-3">Organization Information</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="AppSettings.OrganizationName" class="form-control" placeholder="Organization Name" />
                                    <label asp-for="AppSettings.OrganizationName">
                                        <i class="bi bi-building me-1"></i> Organization Name
                                    </label>
                                    <span asp-validation-for="AppSettings.OrganizationName" class="text-danger small"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="AppSettings.Address" class="form-control" placeholder="Address" />
                                    <label asp-for="AppSettings.Address">
                                        <i class="bi bi-geo-alt me-1"></i> Address
                                    </label>
                                    <span asp-validation-for="AppSettings.Address" class="text-danger small"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="AppSettings.Tel" class="form-control" placeholder="Telephone" />
                                    <label asp-for="AppSettings.Tel">
                                        <i class="bi bi-telephone me-1"></i> Telephone
                                    </label>
                                    <span asp-validation-for="AppSettings.Tel" class="text-danger small"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="AppSettings.Email" class="form-control" placeholder="Email" type="email" />
                                    <label asp-for="AppSettings.Email">
                                        <i class="bi bi-envelope me-1"></i> Email
                                    </label>
                                    <span asp-validation-for="AppSettings.Email" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="AppSettings.Website" class="form-control" placeholder="Website" />
                                    <label asp-for="AppSettings.Website">
                                        <i class="bi bi-globe me-1"></i> Website
                                    </label>
                                    <span asp-validation-for="AppSettings.Website" class="text-danger small"></span>
                                </div>
                                
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="bi bi-facebook"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="AppSettings.Facebook" class="form-control" placeholder="Facebook" />
                                        <label asp-for="AppSettings.Facebook">Facebook</label>
                                    </div>
                                </div>
                                <span asp-validation-for="AppSettings.Facebook" class="text-danger small"></span>
                                
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="bi bi-twitter"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="AppSettings.Twitter" class="form-control" placeholder="Twitter" />
                                        <label asp-for="AppSettings.Twitter">Twitter</label>
                                    </div>
                                </div>
                                <span asp-validation-for="AppSettings.Twitter" class="text-danger small"></span>
                                
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="bi bi-linkedin"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="AppSettings.LinkedIn" class="form-control" placeholder="LinkedIn" />
                                        <label asp-for="AppSettings.LinkedIn">LinkedIn</label>
                                    </div>
                                </div>
                                <span asp-validation-for="AppSettings.LinkedIn" class="text-danger small"></span>

                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="bi bi-youtube"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="AppSettings.YouTube" class="form-control" placeholder="YouTube" />
                                        <label asp-for="AppSettings.YouTube">YouTube</label>
                                    </div>
                                </div>
                                <span asp-validation-for="AppSettings.YouTube" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <!-- Additional Settings -->
                        <h5 class="text-primary mb-3">Additional Settings</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="AppSettings.CurrentSessionId" class="form-select" 
                                            asp-items="Model.SessionList">
                                        <option value="">-- Select Current Session --</option>
                                    </select>
                                    <label asp-for="AppSettings.CurrentSessionId">Current Session</label>
                                </div>
                                <span asp-validation-for="AppSettings.CurrentSessionId" class="text-danger"></span>
                                <div class="form-text">Select the active session for the system</div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="bi bi-person-plus me-1"></i> Registration Status</h6>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="AppSettings.RegistrationIsOpened" id="registrationToggle">
                                            <label class="form-check-label" for="registrationToggle">
                                                @(Model.AppSettings.RegistrationIsOpened ? "Registration is Open" : "Registration is Closed")
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Admin
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-2"></i>Save Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Toggle text for registration status
        $(document).ready(function() {
            $('#registrationToggle').change(function() {
                if($(this).is(':checked')) {
                    $(this).next('label').text('Registration is Open');
                } else {
                    $(this).next('label').text('Registration is Closed');
                }
            });
        });
    </script>
}
