@page
@model CeilUfas.Pages.Admin.Sessions.EditModel
@{
    ViewData["Title"] = "Edit Session";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Session</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Session.Id" />
                
                <div class="mb-3">
                    <label asp-for="Session.Code" class="form-label">Code</label>
                    <input asp-for="Session.Code" class="form-control" maxlength="30" />
                    <span asp-validation-for="Session.Code" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Session.Name" class="form-label">Name</label>
                    <input asp-for="Session.Name" class="form-control" maxlength="300" />
                    <span asp-validation-for="Session.Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Session.NameAr" class="form-label">Arabic Name</label>
                    <input asp-for="Session.NameAr" class="form-control" maxlength="300" />
                    <span asp-validation-for="Session.NameAr" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Session.StartDate" class="form-label">Start Date</label>
                        <input asp-for="Session.StartDate" class="form-control" type="date" />
                        <span asp-validation-for="Session.StartDate" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Session.EndDate" class="form-label">End Date</label>
                        <input asp-for="Session.EndDate" class="form-control" type="date" />
                        <span asp-validation-for="Session.EndDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                    <div>
                        <a asp-page="./Details" asp-route-id="@Model.Session.Id" class="btn btn-outline-info me-2">
                            <i class="bi bi-info-circle me-1"></i>Details
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}